@page
@model EXE111PROJECT.Pages.Auth.ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="bg-white p-4 rounded-3 shadow-sm" style="width: 100%; max-width: 400px;">
        <div class="text-center mb-4">
            <h3 class="text-primary">Quên mật khẩu</h3>
        </div>
        <form method="post">
            <div class="mb-3">
                <input type="email" class="form-control" placeholder="Email">
            </div>
            <button type="submit" class="btn btn-primary w-100 py-2">Gửi yêu cầu</button>
            <div class="text-center mt-3">
                <a asp-page="/Auth/Login" class="text-decoration-none text-primary">Quay lại đăng nhập</a>
            </div>
        </form>
    </div>
</div>